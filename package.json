    "postgres": "^3.4.5",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.17",
    "@types/pg": "^8.15.1",
    "drizzle-kit": "^0.31.1",
